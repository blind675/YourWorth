<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:background="#566478"
        android:src="@drawable/worth"
        android:padding="50dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/app_name"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="127dp"
        android:layout_height="25dp"
        android:background="#749233"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/digit_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:width="10dp"
            android:textColor="#000000"
            android:inputType="number"
            android:maxLength="1"/>

        <EditText
            android:id="@+id/digit_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:width="10dp"
            android:textColor="#000000"
            android:inputType="number"
            android:maxLength="1"
            android:layout_gravity="center"
            android:gravity="center"/>

        <EditText
            android:id="@+id/digit_tree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:width="10dp"
            android:textColor="#000000"
            android:inputType="number"
            android:maxLength="1"
            android:layout_gravity="center"
            android:gravity="center"/>

        <EditText
            android:id="@+id/digit_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:width="10dp"
            android:textColor="#000000"
            android:inputType="number"
            android:maxLength="1"
            android:layout_gravity="center"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/approve_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#566478"
            android:src="@drawable/worth"
            android:layout_marginTop="2dp"
            android:contentDescription="@string/pin_status"/>

        </LinearLayout>

</RelativeLayout>