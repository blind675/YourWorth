<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#FFF">

    <Button
            android:id="@+id/loginButton"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:text="@string/sign_in"
            android:textSize="12sp"
            android:onClick="signIn"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"/>

    <LinearLayout
        android:id="@+id/pin_login_input"
        android:orientation="horizontal"
        android:layout_width="132dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_above="@id/loginButton">

        <EditText
            android:id="@+id/digit_one"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:inputType="number"
            android:maxLength="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/back"
            android:singleLine="true"
            android:imeOptions="actionNext"/>

        <EditText
            android:id="@+id/digit_two"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:inputType="number"
            android:maxLength="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/back"
            android:singleLine="true"
            android:imeOptions="actionNext"/>

        <EditText
            android:id="@+id/digit_tree"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:inputType="number"
            android:maxLength="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/back"
            android:singleLine="true"
            android:imeOptions="actionNext"/>

        <EditText
            android:id="@+id/digit_four"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:inputType="number"
            android:maxLength="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/back"
            android:singleLine="true"
            android:imeOptions="actionDone"/>

        <ImageView
            android:id="@+id/approve_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pin_bad"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/pin_status"
            android:visibility="gone"/>

    </LinearLayout>

    <ImageView
            android:id="@+id/icon_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/yourworth_hires"
            android:layout_marginBottom="50dp"
            android:contentDescription="@string/app_name"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/pin_login_input"/>

</RelativeLayout>